{{#if (eq status "SUCCESS")}}
<span class="px-3 py-1 text-xs bg-green-100 text-green-700 rounded-full" data-status="SUCCESS">
    ✔ OK
</span>
{{else if (eq status "EN_PROCESO")}}
<span class="px-3 py-1 text-xs bg-blue-100 text-blue-700 rounded-full" data-status="EN_PROCESO">
    ⏳ En proceso
</span>
{{else if (eq status "PARTIAL_ERROR")}}
<span class="px-3 py-1 text-xs bg-amber-100 text-amber-700 rounded-full" data-status="PARTIAL_ERROR">
    ⚠ Error Parcial
</span>
{{else}}
<span class="px-3 py-1 text-xs bg-red-100 text-red-600 rounded-full" data-status="ERROR">
    ✖ {{status}}
</span>
{{/if}}
