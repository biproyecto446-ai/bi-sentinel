<div
  class="group relative bg-white rounded-2xl shadow-lg shadow-gray-200/50 hover:shadow-xl hover:shadow-gray-300/50 border border-gray-100 transition-all duration-300 overflow-hidden"
  data-component="CardTestigosComision" data-card-id="{{id}}">
  <!-- Decorative accent -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-violet-500"></div>

  <div class="relative p-6">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-5">
      <div
        class="w-11 h-11 rounded-xl bg-gradient-to-br from-cyan-400 to-blue-500 flex items-center justify-center shadow-lg shadow-cyan-500/30">
        <i class="fa-solid fa-users text-white text-lg"></i>
      </div>
      <div>
        <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">{{title}}</span>
        <p id="count-{{id}}" class="text-3xl font-black text-gray-900 tracking-tight leading-none mt-0.5">-</p>
      </div>
    </div>

    <!-- Stats Accordion -->
    <details class="group/accordion">
      <summary class="flex items-center justify-between cursor-pointer list-none py-2 border-t border-gray-100 mt-2">
        <span class="text-sm font-medium text-gray-500">Ver detalles por tipo</span>
        <i class="fa-solid fa-chevron-down text-gray-400 text-xs transition-transform duration-200 group-open/accordion:rotate-180"></i>
      </summary>
      
      <div class="space-y-2 pt-3 animate-[fadeIn_0.2s_ease-out]">
        <!-- auxiliar -->
        <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-2.5">
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-emerald-500"></div>
            <span class="text-sm font-medium text-gray-600">Auxiliar</span>
          </div>
          <span id="count-testigos-comision-auxiliar-{{id}}" class="text-lg font-bold text-emerald-600">-</span>
        </div>

        <!-- zonal -->
        <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-2.5">
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-blue-500"></div>
            <span class="text-sm font-medium text-gray-600">Zonal</span>
          </div>
          <span id="count-testigos-comision-zonal-{{id}}" class="text-lg font-bold text-blue-600">-</span>
        </div>

        <!-- municipal -->
        <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-2.5">
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-violet-500"></div>
            <span class="text-sm font-medium text-gray-600">Municipal</span>
          </div>
          <span id="count-testigos-comision-municipal-{{id}}" class="text-lg font-bold text-violet-600">-</span>
        </div>

        <!-- general -->
        <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-2.5">
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-amber-500"></div>
            <span class="text-sm font-medium text-gray-600">General</span>
          </div>
          <span id="count-testigos-comision-general-{{id}}" class="text-lg font-bold text-amber-600">-</span>
        </div>

        <!-- cne -->
        <div class="flex items-center justify-between bg-gray-50 rounded-lg px-4 py-2.5">
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-rose-500"></div>
            <span class="text-sm font-medium text-gray-600">CNE</span>
          </div>
          <span id="count-testigos-comision-cne-{{id}}" class="text-lg font-bold text-rose-600">-</span>
        </div>
      </div>
    </details>
    
  </div>
</div>