<div class="group relative bg-white rounded-2xl border border-gray-100 shadow-md shadow-gray-200/50 hover:shadow-xl hover:shadow-emerald-100/50 transition-all duration-300 overflow-hidden" data-component="CardCredenciales" data-card-id="{{id}}">
  <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/5 to-teal-500/5 opacity-0 group-hover:opacity-100 transition-opacity">
  </div>
  <div class="relative p-6">
    <div class="flex items-center justify-between mb-4">
      <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">{{title}}</span>
      <div class="w-10 h-10 rounded-xl bg-emerald-50 flex items-center justify-center">
        <i class="fa-solid fa-id-card text-emerald-600"></i>
      </div>
    </div>
    <p id="count-{{id}}" class="text-4xl font-black text-gray-900 tracking-tight">-</p>
    <p class="mt-2 text-xs text-gray-400">Total registradas</p>
  </div>
</div>
