</header>

<script>
    (() => {
        const menuBtn = document.getElementById("menuBtn");
        const mobileMenu = document.getElementById("mobileMenu");
        const menuIcon = document.getElementById("menuIcon");

        menuBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
            
            // Toggle icon
            if (mobileMenu.classList.contains("hidden")) {
                menuIcon.className = "fa-solid fa-bars text-slate-300";
            } else {
                menuIcon.className = "fa-solid fa-xmark text-slate-300";
            }
        });

        // Marcar link activo
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link, #mobileMenu a').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('bg-slate-800/80', 'text-white');
            }
        });
    })();
</script>
