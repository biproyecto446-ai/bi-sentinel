<div class="min-h-screen bg-gray-100 p-6">
  <div class="max-w-7xl mx-auto space-y-6">

    <!-- Título -->
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-semibold text-gray-800">
        Gestión de Presupuesto Mensual
      </h1>
      <select class="border rounded-lg px-3 py-2 text-sm">
        <option>Enero 2025</option>
        <option>Febrero 2025</option>
        <option>Marzo 2025</option>
      </select>
    </div>

    <!-- Resumen -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-5 rounded-xl shadow border">
        <p class="text-sm text-gray-500">Presupuesto Total</p>
        <p class="text-2xl font-bold text-gray-800">$5.000.000</p>
      </div>

      <div class="bg-white p-5 rounded-xl shadow border">
        <p class="text-sm text-gray-500">Total Gastado</p>
        <p class="text-2xl font-bold text-red-600">$3.450.000</p>
      </div>

      <div class="bg-white p-5 rounded-xl shadow border">
        <p class="text-sm text-gray-500">Disponible</p>
        <p class="text-2xl font-bold text-green-600">$1.550.000</p>
      </div>
    </div>

    <!-- Progreso global -->
    <div class="bg-white p-6 rounded-xl shadow border">
      <div class="flex justify-between mb-2">
        <span class="text-sm text-gray-600">Ejecución del presupuesto</span>
        <span class="text-sm font-semibold">69%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-3">
        <div class="bg-blue-600 h-3 rounded-full" style="width: 69%"></div>
      </div>
    </div>

    <!-- Tabla por categorías -->
    <div class="bg-white rounded-xl shadow border overflow-hidden">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-50 border-b">
          <tr class="text-left text-gray-600 uppercase text-xs">
            <th class="px-4 py-3">Categoría</th>
            <th class="px-4 py-3">Asignado</th>
            <th class="px-4 py-3">Gastado</th>
            <th class="px-4 py-3">Disponible</th>
            <th class="px-4 py-3">Estado</th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <tr>
            <td class="px-4 py-3 font-medium">Infraestructura</td>
            <td class="px-4 py-3">$2.000.000</td>
            <td class="px-4 py-3">$1.800.000</td>
            <td class="px-4 py-3 text-red-600">$200.000</td>
            <td class="px-4 py-3">
              <span class="px-2 py-1 text-xs rounded bg-red-100 text-red-700">
                Crítico
              </span>
            </td>
          </tr>

          <tr>
            <td class="px-4 py-3 font-medium">Software</td>
            <td class="px-4 py-3">$1.500.000</td>
            <td class="px-4 py-3">$900.000</td>
            <td class="px-4 py-3 text-green-600">$600.000</td>
            <td class="px-4 py-3">
              <span class="px-2 py-1 text-xs rounded bg-green-100 text-green-700">
                Controlado
              </span>
            </td>
          </tr>

          <tr>
            <td class="px-4 py-3 font-medium">Servicios</td>
            <td class="px-4 py-3">$1.500.000</td>
            <td class="px-4 py-3">$750.000</td>
            <td class="px-4 py-3 text-green-600">$750.000</td>
            <td class="px-4 py-3">
              <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-700">
                Normal
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Ajuste rápido -->
    <div class="bg-white p-6 rounded-xl shadow border">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">
        Ajustar presupuesto
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <select class="border rounded-lg px-3 py-2">
          <option>Infraestructura</option>
          <option>Software</option>
          <option>Servicios</option>
        </select>

        <input type="number" placeholder="Nuevo monto"
          class="border rounded-lg px-3 py-2" />

        <input type="text" placeholder="Observación"
          class="border rounded-lg px-3 py-2 md:col-span-2" />

        <button
          class="bg-blue-600 text-white rounded-lg px-4 py-2 hover:bg-blue-700 transition md:col-span-4">
          Guardar cambios
        </button>
      </div>
    </div>

  </div>
</div>
