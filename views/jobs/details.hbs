<div class="container mx-auto px-6 py-6">

    <h1 class="text-3xl font-bold mb-6 text-gray-800">
        Historial de Ejecuciones – Cron PostgreSQL
    </h1>

    {{#if error}}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6">
        <p class="font-semibold">{{error}}</p>
    </div>
    {{else}}

    <div class="mb-4 text-sm text-gray-600">
        Página {{pagination.page}} · Total registros: {{pagination.totalRecords}}
    </div>

    <div class="shadow-lg rounded-xl border border-gray-200 overflow-x-auto">
        <table class="min-w-full bg-white text-left">
            <thead class="bg-gray-50 border-b">
                <tr class="text-gray-600 uppercase text-xs tracking-wide">
                    <th class="px-4 py-3">Job ID</th>
                    <th class="px-4 py-3">Run ID</th>
                    <th class="px-4 py-3">Estado</th>
                    <th class="px-4 py-3">Inicio</th>
                    <th class="px-4 py-3">Fin</th>
                    <th class="px-4 py-3">Duración</th>
                    <th class="px-4 py-3">Database</th>
                    <th class="px-4 py-3">Usuario</th>
                    <th class="px-4 py-3">Command</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-gray-200 text-sm">
                {{#each runs}}
                <tr class="hover:bg-gray-50 transition">

                    <td class="px-4 py-3 whitespace-nowrap font-semibold">
                        {{jobid}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap">
                        {{runid}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap">
                        {{#if (eq status "succeeded")}}
                        <span class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded-full">
                            Exitoso
                        </span>

                        {{else if (eq status "running")}}
                        <span class="px-2 py-1 text-xs bg-blue-100 text-blue-700 rounded-full">
                            En ejecución
                        </span>

                        {{else}}
                        <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded-full">
                            Fallido
                        </span>
                        {{/if}}

                    </td>

                    <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-600">
                        {{start_time}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-600">
                        {{end_time}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap text-xs font-mono">
                        {{duration_ms}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap">
                        {{database}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap">
                        {{username}}
                    </td>

                    <td class="px-4 py-3 text-xs text-gray-500 max-w-xl truncate">
                        <pre class="whitespace-pre-wrap">{{command}}</pre>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{/if}}

</div>