<div class="container mx-auto px-6 py-6">

    <h1 class="text-3xl font-bold mb-6 text-gray-800">
        Cron Jobs PostgreSQL
    </h1>

    {{#if error}}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6">
        <p class="font-semibold">{{error}}</p>
    </div>
    {{else}}

    <div class="mb-4 text-sm text-gray-600">
        Página {{pagination.page}} · Total registros: {{pagination.totalRecords}}
    </div>

    <div class="shadow-lg rounded-xl border border-gray-200 overflow-x-auto">
        <table class="min-w-full bg-white text-left">
            <thead class="bg-gray-50 border-b">
                <tr class="text-gray-600 uppercase text-xs tracking-wide">
                    <th class="px-4 py-3">Estado</th>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">Job Name</th>
                    <th class="px-4 py-3">Schedule</th>
                    <th class="px-4 py-3">Database</th>
                    <th class="px-4 py-3">User</th>
                    <th class="px-4 py-3">Active</th>
                    <th class="px-4 py-3">Command</th>
                    <th class="px-4 py-3">Acciones</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-gray-200 text-sm">
                {{#each jobs}}
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-4 py-3 whitespace-nowrap">
                        {{#if running}}
                        <span class="inline-flex items-center gap-2 rounded-full bg-blue-100 px-3 py-1 text-blue-800"
                            title="El job se está ejecutando en este momento">
                            <i class="fa-solid fa-spinner fa-spin text-blue-600"></i>
                            <span class="text-xs font-semibold uppercase tracking-wide">
                                En ejecución
                            </span>
                        </span>

                        {{else if active}}
                        <span class="inline-flex items-center gap-2 rounded-full bg-green-100 px-3 py-1 text-green-800"
                            title="El job está programado y activo">
                            <i class="fa-solid fa-clock text-green-600"></i>
                            <span class="text-xs font-semibold uppercase tracking-wide">
                                Programado
                            </span>
                        </span>

                        {{else}}
                        <span class="inline-flex items-center gap-2 rounded-full bg-red-100 px-3 py-1 text-red-800"
                            title="El job está deshabilitado y no se ejecuta">
                            <i class="fa-solid fa-circle-xmark text-red-600"></i>
                            <span class="text-xs font-semibold uppercase tracking-wide">
                                Deshabilitado
                            </span>
                        </span>
                        {{/if}}
                    </td>

                    <td class="px-4 py-3 whitespace-nowrap">{{jobid}}</td>
                    <td class="px-4 py-3 whitespace-nowrap font-semibold">{{jobname}}</td>
                    <td class="px-4 py-3 whitespace-nowrap">
                        <div class="font-semibold text-gray-800" title="{{schedule}}">
                            {{schedule_human}}
                        </div>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap">{{database}}</td>
                    <td class="px-4 py-3 whitespace-nowrap">{{username}}</td>
                    <td class="px-4 py-3 whitespace-nowrap">
                        {{#if active}}
                        <span class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded-full">Activo</span>
                        {{else}}
                        <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded-full">Inactivo</span>
                        {{/if}}
                    </td>
                    <td class="px-4 py-3 text-xs text-gray-500 max-w-xl truncate">
                        <pre class="whitespace-pre-wrap">{{command}}</pre>
                    </td>
                    <td>
                        <a href="/jobs/details/{{jobid}}"
                            class="text-xs px-3 py-1 bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200">
                            Ver detalle
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{/if}}

</div>