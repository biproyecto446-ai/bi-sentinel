<div class="container mx-auto px-6 py-6">

    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">
                Cron Jobs PostgreSQL
            </h1>
            <p class="text-sm text-gray-500 mt-1">Gestiona los trabajos programados de la base de datos</p>
        </div>
        <div class="flex items-center gap-3">
            <button onclick="location.reload()" 
                class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-semibold rounded-lg transition flex items-center gap-2">
                <i class="fa-solid fa-rotate"></i>
                Refrescar
            </button>
        </div>
    </div>

    {{#if error}}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6">
        <p class="font-semibold">{{error}}</p>
    </div>
    {{else}}

    <div class="mb-4 text-sm text-gray-600">
        Página {{pagination.page}} · Total registros: {{pagination.totalRecords}}
    </div>

    <div class="shadow-lg rounded-xl border border-gray-200 overflow-x-auto bg-white">
        <table class="min-w-full text-left">
            <thead class="bg-gray-50 border-b">
                <tr class="text-gray-600 uppercase text-xs tracking-wide">
                    <th class="px-4 py-3">Estado</th>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">Job Name</th>
                    <th class="px-4 py-3">Schedule</th>
                    <th class="px-4 py-3">Database</th>
                    <th class="px-4 py-3">Active</th>
                    <th class="px-4 py-3">Acciones</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-gray-200 text-sm">
                {{#each jobs}}
                <tr class="hover:bg-gray-50 transition" data-job-id="{{jobid}}">
                    <!-- Estado -->
                    <td class="px-4 py-3 whitespace-nowrap">
                        {{#if running}}
                        <span class="inline-flex items-center gap-2 rounded-full bg-blue-100 px-3 py-1 text-blue-800">
                            <i class="fa-solid fa-spinner fa-spin text-blue-600"></i>
                            <span class="text-xs font-semibold uppercase tracking-wide">En ejecución</span>
                        </span>
                        {{else if active}}
                        <span class="inline-flex items-center gap-2 rounded-full bg-green-100 px-3 py-1 text-green-800">
                            <i class="fa-solid fa-clock text-green-600"></i>
                            <span class="text-xs font-semibold uppercase tracking-wide">Programado</span>
                        </span>
                        {{else}}
                        <span class="inline-flex items-center gap-2 rounded-full bg-red-100 px-3 py-1 text-red-800">
                            <i class="fa-solid fa-circle-xmark text-red-600"></i>
                            <span class="text-xs font-semibold uppercase tracking-wide">Deshabilitado</span>
                        </span>
                        {{/if}}
                    </td>

                    <!-- ID -->
                    <td class="px-4 py-3 whitespace-nowrap font-mono text-gray-600">{{jobid}}</td>

                    <!-- Job Name -->
                    <td class="px-4 py-3 whitespace-nowrap font-semibold text-gray-800">{{jobname}}</td>

                    <!-- Schedule -->
                    <td class="px-4 py-3 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                            <div>
                                <div class="font-semibold text-gray-800">{{schedule_human}}</div>
                                <code class="text-xs text-gray-500 font-mono">{{schedule}}</code>
                            </div>
                            <button onclick="openEditModal({{jobid}}, '{{schedule}}', {{active}})" 
                                class="p-1.5 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition"
                                title="Editar schedule">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </div>
                    </td>

                    <!-- Database -->
                    <td class="px-4 py-3 whitespace-nowrap text-gray-600">{{database}}</td>

                    <!-- Active Toggle -->
                    <td class="px-4 py-3 whitespace-nowrap">
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" 
                                class="sr-only peer toggle-active" 
                                data-job-id="{{jobid}}"
                                {{#if active}}checked{{/if}}>
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                        </label>
                    </td>

                    <!-- Acciones -->
                    <td class="px-4 py-3 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                            <button onclick="openEditModal({{jobid}}, '{{schedule}}', {{active}})" 
                                class="px-3 py-1.5 text-xs bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200 transition flex items-center gap-1">
                                <i class="fa-solid fa-gear"></i>
                                Configurar
                            </button>
                            <a href="/jobs/details/{{jobid}}"
                                class="px-3 py-1.5 text-xs bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition flex items-center gap-1">
                                <i class="fa-solid fa-list"></i>
                                Historial
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{/if}}

</div>

<!-- Modal de Edición -->
<div id="editModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg mx-4 overflow-hidden">
        <!-- Header del Modal -->
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                    <i class="fa-solid fa-clock text-indigo-600"></i>
                </div>
                <div>
                    <h3 class="text-lg font-bold text-gray-800">Configurar Cron Job</h3>
                    <p class="text-xs text-gray-500">Job ID: <span id="modalJobId" class="font-mono">-</span></p>
                </div>
            </div>
            <button onclick="closeEditModal()" class="text-gray-400 hover:text-gray-600 transition">
                <i class="fa-solid fa-xmark text-xl"></i>
            </button>
        </div>

        <!-- Body del Modal -->
        <div class="p-6">
            <!-- Schedule -->
            <div class="mb-5">
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Schedule (Cron Expression)
                </label>
                <input type="text" id="modalSchedule" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 focus:outline-none font-mono"
                    placeholder="*/30 * * * *">
                <p id="schedulePreview" class="mt-2 text-sm text-gray-500">
                    <i class="fa-solid fa-clock text-gray-400 mr-1"></i>
                    <span>-</span>
                </p>
            </div>

            <!-- Ejemplos comunes -->
            <div class="mb-5">
                <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">
                    Ejemplos comunes
                </label>
                <div class="flex flex-wrap gap-2">
                    <button type="button" onclick="setSchedule('* * * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Cada minuto
                    </button>
                    <button type="button" onclick="setSchedule('*/5 * * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Cada 5 min
                    </button>
                    <button type="button" onclick="setSchedule('*/15 * * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Cada 15 min
                    </button>
                    <button type="button" onclick="setSchedule('*/30 * * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Cada 30 min
                    </button>
                    <button type="button" onclick="setSchedule('0 * * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Cada hora
                    </button>
                    <button type="button" onclick="setSchedule('0 */2 * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Cada 2 horas
                    </button>
                    <button type="button" onclick="setSchedule('0 0 * * *')" 
                        class="px-3 py-1.5 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition">
                        Diario (00:00)
                    </button>
                </div>
            </div>

            <!-- Estado Activo -->
            <div class="mb-5 p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center justify-between">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700">Estado del Job</label>
                        <p class="text-xs text-gray-500">Activa o desactiva la ejecución programada</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" id="modalActive" class="sr-only peer">
                        <div class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-indigo-600"></div>
                        <span id="activeLabel" class="ml-3 text-sm font-medium text-gray-700">Activo</span>
                    </label>
                </div>
            </div>

            <!-- Alerta -->
            <div id="modalAlert" class="hidden p-3 rounded-lg text-sm mb-4"></div>
        </div>

        <!-- Footer del Modal -->
        <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-end gap-3 bg-gray-50">
            <button onclick="closeEditModal()" 
                class="px-5 py-2.5 text-sm font-semibold text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                Cancelar
            </button>
            <button onclick="saveJobChanges()" id="saveBtn"
                class="px-5 py-2.5 text-sm font-semibold text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition flex items-center gap-2">
                <i class="fa-solid fa-floppy-disk"></i>
                Guardar Cambios
            </button>
        </div>
    </div>
</div>

<!-- Toast de notificaciones -->
<div id="toast" class="fixed bottom-6 right-6 hidden transform transition-all duration-300 translate-y-full opacity-0">
    <div class="flex items-center gap-3 px-5 py-3 rounded-lg shadow-lg">
        <i id="toastIcon" class="text-lg"></i>
        <span id="toastMessage" class="text-sm font-medium"></span>
    </div>
</div>

<script>
    let currentJobId = null;

    // Abrir modal de edición
    function openEditModal(jobId, schedule, active) {
        currentJobId = jobId;
        document.getElementById('modalJobId').textContent = jobId;
        document.getElementById('modalSchedule').value = schedule;
        document.getElementById('modalActive').checked = active;
        updateActiveLabel();
        
        const modal = document.getElementById('editModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }

    // Cerrar modal
    function closeEditModal() {
        const modal = document.getElementById('editModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        currentJobId = null;
        hideAlert();
    }

    // Establecer schedule desde ejemplo
    function setSchedule(schedule) {
        document.getElementById('modalSchedule').value = schedule;
    }

    // Actualizar label de activo
    function updateActiveLabel() {
        const active = document.getElementById('modalActive').checked;
        document.getElementById('activeLabel').textContent = active ? 'Activo' : 'Inactivo';
    }

    document.getElementById('modalActive').addEventListener('change', updateActiveLabel);

    // Guardar cambios
    async function saveJobChanges() {
        if (!currentJobId) return;

        const schedule = document.getElementById('modalSchedule').value.trim();
        const active = document.getElementById('modalActive').checked;
        const saveBtn = document.getElementById('saveBtn');

        if (!schedule) {
            showAlert('El schedule es requerido', 'error');
            return;
        }

        // Loading state
        saveBtn.disabled = true;
        saveBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Guardando...';

        try {
            const response = await fetch(`/api/jobs/${currentJobId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ schedule, active })
            });

            const result = await response.json();

            if (result.success) {
                showToast('Job actualizado correctamente', 'success');
                closeEditModal();
                setTimeout(() => location.reload(), 1000);
            } else {
                showAlert(result.error || 'Error al guardar', 'error');
            }
        } catch (error) {
            showAlert('Error de conexión', 'error');
        } finally {
            saveBtn.disabled = false;
            saveBtn.innerHTML = '<i class="fa-solid fa-floppy-disk"></i> Guardar Cambios';
        }
    }

    // Toggle activo desde la tabla
    document.querySelectorAll('.toggle-active').forEach(toggle => {
        toggle.addEventListener('change', async function() {
            const jobId = this.dataset.jobId;
            const active = this.checked;
            const row = document.querySelector(`tr[data-job-id="${jobId}"]`);

            try {
                const response = await fetch(`/api/jobs/${jobId}/toggle`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ active })
                });

                const result = await response.json();

                if (result.success) {
                    showToast(active ? 'Job activado' : 'Job desactivado', 'success');
                    setTimeout(() => location.reload(), 800);
                } else {
                    this.checked = !active; // Revertir
                    showToast(result.error || 'Error al cambiar estado', 'error');
                }
            } catch (error) {
                this.checked = !active; // Revertir
                showToast('Error de conexión', 'error');
            }
        });
    });

    // Mostrar alerta en modal
    function showAlert(message, type) {
        const alert = document.getElementById('modalAlert');
        alert.textContent = message;
        alert.className = `p-3 rounded-lg text-sm mb-4 ${
            type === 'error' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'
        }`;
        alert.classList.remove('hidden');
    }

    function hideAlert() {
        document.getElementById('modalAlert').classList.add('hidden');
    }

    // Mostrar toast
    function showToast(message, type) {
        const toast = document.getElementById('toast');
        const icon = document.getElementById('toastIcon');
        const msg = document.getElementById('toastMessage');

        msg.textContent = message;
        
        if (type === 'success') {
            toast.querySelector('div').className = 'flex items-center gap-3 px-5 py-3 rounded-lg shadow-lg bg-green-600 text-white';
            icon.className = 'fa-solid fa-check-circle text-lg';
        } else {
            toast.querySelector('div').className = 'flex items-center gap-3 px-5 py-3 rounded-lg shadow-lg bg-red-600 text-white';
            icon.className = 'fa-solid fa-exclamation-circle text-lg';
        }

        toast.classList.remove('hidden', 'translate-y-full', 'opacity-0');
        
        setTimeout(() => {
            toast.classList.add('translate-y-full', 'opacity-0');
            setTimeout(() => toast.classList.add('hidden'), 300);
        }, 3000);
    }

    // Cerrar modal con Escape
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeEditModal();
    });

    // Cerrar modal al hacer click fuera
    document.getElementById('editModal').addEventListener('click', (e) => {
        if (e.target === e.currentTarget) closeEditModal();
    });
</script>
